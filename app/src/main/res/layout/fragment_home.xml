<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:text="Home"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/homeusege"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/bottom_nav_background"
            android:text="@string/home_usage"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/bottom_nav_background"
            android:text="@string/categories"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/ElectricBill"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/bottom_nav_background"
            android:text="Electric Bill calculator"
            android:textColor="@color/black"
            android:textSize="22sp" />
        <Button
            android:id="@+id/waterbill"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/bottom_nav_background"
            android:text="Water Bill calculator"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </LinearLayout>
</FrameLayout>